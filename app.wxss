/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 32rpx;
  line-height: 1;
  border: none;
  cursor: pointer;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #3cc51f;
  color: white;
}

.btn-secondary {
  background-color: #7A7E83;
  color: white;
}

.btn-outline {
  background-color: transparent;
  border: 2rpx solid #3cc51f;
  color: #3cc51f;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: #e5e5e5;
  margin: 20rpx 0;
}

/* 隐藏元素 */
.hidden {
  display: none;
}

/* 显示元素 */
.show {
  display: block;
}