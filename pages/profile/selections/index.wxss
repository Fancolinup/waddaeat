.selections-page{padding:20rpx 24rpx 140rpx;box-sizing:border-box;min-height:100vh}
.header{display:flex;align-items:center;justify-content:space-between;margin-bottom:16rpx;}
.title{font-size:34rpx;font-weight:600;color:#111;}
/* 顶部完成按钮删除，保留状态样式以备复用 */
.finish-btn{display:none}
.tip{font-size:24rpx;color:#666;margin:8rpx 0 12rpx;}

.bubble-list{display:flex;flex-wrap:wrap;gap:16rpx;}
.bubble{position:relative;display:flex;align-items:center;padding:12rpx 16rpx 12rpx 12rpx;border-radius:9999rpx;background:rgba(111,66,193,0.06);border:2rpx solid transparent;}
.bubble.selected{border-color:#6f42c1;}
.logo{width:48rpx;height:48rpx;border-radius:50%;background:#f3f3f3;margin-right:12rpx;}
.name{font-size:26rpx;color:#222;}
.close{position:absolute;top:-8rpx;right:-8rpx;width:32rpx;height:32rpx;border-radius:50%;background:#fff;border:2rpx solid #ddd;color:#666;display:flex;align-items:center;justify-content:center;line-height:32rpx;font-size:24rpx;}
.close:active{background:#f5f5f5}

.actions{margin-top:24rpx;}
/* 添加品牌按钮：虚线+圆角 */
.add-btn{background:#fff;border:2rpx dashed #bbb;color:#555;border-radius:16rpx;padding:18rpx 20rpx;font-size:26rpx;}
.add-btn:active{opacity:.85}

/* 历史区块 */
.history-section{margin-top:28rpx}
.section-title{font-size:34rpx;font-weight:600;color:#333;margin-bottom:12rpx}
.history-list{display:flex;flex-direction:column;gap:12rpx}
.history-item{display:flex;align-items:center;background:#fff;border-radius:14rpx;padding:14rpx 16rpx;box-shadow:0 6rpx 16rpx rgba(0,0,0,.04)}
.h-logo{width:56rpx;height:56rpx;border-radius:12rpx;background:#f2f2f2;margin-right:12rpx}
.h-info{display:flex;flex-direction:column}
.h-name{font-size:26rpx;color:#111}
.h-time{font-size:22rpx;color:#888;margin-top:4rpx}
.empty{color:#999;font-size:24rpx;text-align:center;padding:20rpx 0}

/* 固定底部完成按钮 */
.bottom-bar{position:fixed;left:0;right:0;bottom:0;background:rgba(255,255,255,.9);backdrop-filter:blur(10px);padding:12rpx 20rpx;border-top:1rpx solid rgba(0,0,0,.06)}
.finish-fixed{width:100%;height:92rpx;line-height:92rpx;border-radius:24rpx;background:#6f42c1;color:#fff;font-size:30rpx;border:none}
.finish-fixed[disabled]{background:#d6c7f3;color:#fff;opacity:.8}