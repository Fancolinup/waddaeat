.profile-page{padding:24rpx 24rpx 60rpx;background:#fafafa;min-height:100vh;box-sizing:border-box}
.header{padding:16rpx 0 32rpx}
.title{font-size:36rpx;font-weight:600;color:#222}
.stats{display:flex;justify-content:space-between;gap:16rpx;background:#fff;border-radius:16rpx;padding:24rpx;margin-bottom:24rpx;box-shadow:0 6rpx 20rpx rgba(0,0,0,0.04)}
.stat-item{flex:1;display:flex;flex-direction:column;align-items:center}
.stat-value{font-size:40rpx;font-weight:700;color:#111}
.stat-label{margin-top:8rpx;font-size:24rpx;color:#888}
.actions{margin-top:8rpx}
.action-btn{width:100%;height:88rpx;line-height:88rpx;background:#111;color:#fff;border-radius:12rpx}
.action-btn:active{opacity:.85}

/* 全局配色 */
:root{--primary:#3498db;--teal:#1abc9c;--gray:#8ea0ae;--bg:#eaf3f9}

/* 页面与分区 */
.profile-page{padding:24rpx 24rpx 100rpx;min-height:100vh;box-sizing:border-box;font-family:-apple-system,BlinkMacSystemFont,"PingFang SC","Hiragino Sans GB","Microsoft YaHei",Helvetica,Arial,sans-serif;-webkit-font-smoothing:antialiased}
.glass-bg{background:linear-gradient(160deg,rgba(52,152,219,.15),rgba(26,188,156,.12)),#f6fbff}
.section{margin-bottom:28rpx}

/* 玻璃卡片 */
.card.glass{backdrop-filter:blur(12px);-webkit-backdrop-filter:blur(12px);background:rgba(255,255,255,.45);border:1px solid rgba(255,255,255,.5);border-radius:20rpx;box-shadow:0 10rpx 30rpx rgba(17,63,95,.12)}

/* 抽象头像 */
.user-card{display:flex;align-items:center;padding:28rpx}
.avatar{width:96rpx;height:96rpx;border-radius:50%;background:linear-gradient(145deg,#cfe9ff,#f5fdff);border:6rpx solid rgba(255,255,255,.7);box-shadow:inset 0 0 0 2rpx rgba(52,152,219,.25);position:relative;display:flex;align-items:center;justify-content:center}
.avatar-head{position:absolute;top:20rpx;width:32rpx;height:32rpx;border-radius:50%;background:#b8d9f2}
.avatar-body{position:absolute;bottom:16rpx;width:54rpx;height:28rpx;border-radius:16rpx;background:#b8d9f2}
.user-info{margin-left:24rpx;flex:1}
.row{display:flex;align-items:center;justify-content:space-between}
.name-badge{display:flex;align-items:center;gap:12rpx}
.nickname{font-size:34rpx;font-weight:700;color:#123}
.level-badge{font-size:22rpx;color:#156f5e;background:rgba(26,188,156,.12);padding:6rpx 12rpx;border-radius:10rpx}
.meta{font-size:24rpx;color:#6b7b8a}
.score-line .meta{margin-right:8rpx}
.points-row{display:flex;align-items:baseline;gap:8rpx}
.points-row .meta{font-size:28rpx;color:#0b4a6f;font-weight:600}
.points-row .points-val{font-size:28rpx;color:#0b4a6f;font-weight:600}
/* 旧的 points 样式弃用，统一到 points-val，与“积分”文案保持一致 */
.points{display:none}

/* 列表项与统一间距 */
.list-item{display:flex;align-items:center;padding:26rpx 24rpx;margin-bottom:18rpx}
.icon{width:56rpx;height:56rpx;border-radius:12rpx;display:flex;align-items:center;justify-content:center;background:linear-gradient(135deg,#dff2ff,#f0fffb);margin-right:18rpx;font-size:30rpx;color:#0b4a6f;position:relative}
.content{flex:1}
.title{font-size:30rpx;font-weight:600;color:#0f2a3a}
.desc{margin-top:6rpx;color:#5d7081;font-size:24rpx}
.chevron{font-size:48rpx;color:#7f8fa3;margin-left:12rpx}
.pressed{opacity:.9}

/* Tag 行与样式 */
.tag-row{margin-top:10rpx;display:flex;flex-wrap:wrap;gap:10rpx}
.tag{font-size:22rpx;padding:6rpx 12rpx;border-radius:10rpx}
.taste{color:#c45b7b;background:#ffe9f2}
.rest{color:#0b6f6a;background:#e6fffb}

/* 图标绘制：心形、对勾、书签（简化抽象） */
.like-icon::before{content:"❤";font-size:30rpx;color:#e25577}
.check-icon::before{content:"✔";font-size:30rpx;color:#10b981}
.fav-icon::before{content:"🔖";font-size:30rpx}

/* 分享按钮 */
.share-btn{width:100%;border:none;padding:0;background:transparent}
.share-main{display:flex;align-items:center;justify-content:center;height:108rpx;border-radius:24rpx;background:linear-gradient(135deg,#121212,#2a2a2a);color:#fff;box-shadow:0 12rpx 28rpx rgba(0,0,0,.25),inset 0 1px 0 rgba(255,255,255,.06);position:relative}
.metal::after{content:"";display:block;position:absolute;width:40%;height:2rpx;background:linear-gradient(90deg,transparent,rgba(255,255,255,.6),transparent);top:18rpx;left:30%}
/* 修复：移除错误的补丁标记行，并应用合法的CSS */
.share-icon{display:none}
.share-icon-css{width:36rpx;height:36rpx;margin-right:12rpx;position:relative}
.share-icon-css::before, .share-icon-css::after{content:"";position:absolute;left:0;top:0;right:0;bottom:0;margin:auto}
/* 链接符号icon：两个相连的圆环 */
.share-icon-css::before{width:16rpx;height:16rpx;border:4rpx solid #86b6ff;border-radius:50%;transform:translate(-4rpx,6rpx)}
.share-icon-css::after{width:16rpx;height:16rpx;border:4rpx solid #86b6ff;border-radius:50%;transform:translate(8rpx,-10rpx)}
.share-text{font-size:30rpx;font-weight:700}

/* 收藏浮层 */
.favorites-mask{position:fixed;left:0;right:0;top:0;bottom:0;background:rgba(0,0,0,.35);display:flex;align-items:flex-end}
.favorites-panel{width:100%;max-height:70vh;background:rgba(255,255,255,.9);backdrop-filter:blur(16px);border-radius:24rpx 24rpx 0 0;padding:20rpx}
.panel-header{display:flex;align-items:center;justify-content:space-between;font-size:30rpx;color:#0f2a3a;font-weight:700;margin-bottom:12rpx}
.close{font-size:40rpx;color:#6d7b88;padding:10rpx}
.grid{display:grid;grid-template-columns:repeat(3,1fr);grid-gap:16rpx}
.grid-item{min-height:160rpx}
.fav-card{background:rgba(255,255,255,.7);border:1px solid rgba(255,255,255,.7);border-radius:14rpx;padding:14rpx;box-shadow:0 6rpx 16rpx rgba(0,0,0,.08)}
.fav-type{font-size:20rpx;color:#7c8e9f}
.fav-title{margin-top:6rpx;font-size:26rpx;color:#0f2a3a}
.fav-sub{margin-top:4rpx;color:#6b7b8a;font-size:22rpx}
.disabled-card{background:#f0f3f6;color:#9aa8b5;border:1rpx solid #c5d0da}
.disabled-card .card-title{color:#8a9aa8}
.disabled-card .card-desc{color:#9aa8b5}