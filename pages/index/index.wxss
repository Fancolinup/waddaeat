/* 轮盘容器与轮盘本体 */
.roulette-wheel-container { 
  position: relative; 
  width: 620rpx; 
  height: 620rpx; 
  margin: 0 auto 0rpx; 
}

/* 轮盘右下角扩展操作容器（包含“添加更多餐厅”按钮） */
.roulette-extra-actions {
  position: absolute;
  right: 0;   /* 位置交由 addBtnTransform 控制 */
  bottom: 0;  /* 位置交由 addBtnTransform 控制 */
  z-index: 6;
}
.roulette-wheel { position: absolute; width: 100%; height: 100%; border-radius: 50%; overflow: hidden; transition: transform 3.2s cubic-bezier(.24,.8,.26,1); box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.12); }
  /* 初始化阶段禁用转动过渡，避免对齐时播放动画 */
  .roulette-wheel.no-transition { transition: none !important; }

/* Palette B 渐变（参考附件图片的暖色调色系） */
.roulette-wheel.palette-b { 
  background: conic-gradient(
    #ff6b35 0 30deg,   /* 橙红色 */
    #f7931e 30deg 60deg,   /* 橙色 */
    #ffd23f 60deg 90deg,   /* 黄色 */
    #06ffa5 90deg 120deg,  /* 薄荷绿 */
    #00d4ff 120deg 150deg, /* 天蓝色 */
    #7b68ee 150deg 180deg, /* 中紫色 */
    #ff1493 180deg 210deg, /* 深粉色 */
    #ff69b4 210deg 240deg, /* 热粉色 */
    #ff4500 240deg 270deg, /* 橙红色 */
    #ffa500 270deg 300deg, /* 橙色 */
    #32cd32 300deg 330deg, /* 酸橙绿 */
    #1e90ff 330deg 360deg  /* 道奇蓝 */
  );
  /* 添加转盘边缘包边效果 */
  border: 8rpx solid #ffd700; /* 金色边框 */
  box-shadow: 
    0 20rpx 40rpx rgba(0,0,0,0.12),
    inset 0 0 0 4rpx rgba(255,255,255,0.12),
