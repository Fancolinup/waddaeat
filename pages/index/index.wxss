/* 基础布局 */
.container { 
  min-height: 100vh; 
  display: flex; 
  flex-direction: column; 
  background: linear-gradient(135deg, rgba(240, 248, 255, 0.6), rgba(230, 255, 250, 0.6)); /* 浅色小清新渐变背景 */
  backdrop-filter: blur(15rpx); /* 毛玻璃效果 */
  position: relative;
  z-index: 0; /* 确保背景在最底层 */
}
.title { 
  text-align: center; 
  font-size: 36rpx; 
  font-weight: 600; 
  margin-left: 24rpx;   /* 左边距 */
  margin-right: 24rpx;  /* 右边距 */
  color: #111; 
  transform: translateY(49rpx); /* 使用transform替代margin-top进行垂直定位 */
}

.top-toast {
  position: fixed;
  left: 50%;
  top: 24rpx;
  transform: translateX(-50%);
  padding: 10rpx 16rpx;
  background: rgba(17,17,17,0.85);
  color: #fff;
  border-radius: 24rpx;
  font-size: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.12);
  z-index: 100;
  pointer-events: none;
}

/* 顶部搜索栏（复用领券页样式） */
.search-bar { position:absolute; left:0; top:0; z-index:31; display:flex; align-items:center; gap:10rpx; padding: 0rpx 12rpx; border-radius: 28rpx; background: rgba(255,255,255,0.10); border: 2rpx solid rgba(255,255,255,0.18); box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15); width: 150rpx; height: 56rpx; overflow:hidden; white-space:nowrap; pointer-events:auto; }
.search-icon { width: 28rpx; height: 28rpx; filter: none; }
.search-placeholder { color:#000000; font-size: 24rpx; opacity:1; }

/* POI 预览列表（调试用） */
.poi-preview { padding: 12rpx 20rpx; background: #fff; border-bottom: 1px solid #eee; }
.poi-item { display: flex; flex-wrap: wrap; gap: 12rpx; font-size: 24rpx; color: #333; padding: 8rpx 0; }
.poi-name { font-weight: 600; }
.poi-type { color: #666; }
.poi-distance { color: #999; }
.poi-location { color: #999; }

/* 转盘切换区域容器：提供独立占位，避免与短清单互相影响 */
.wheel-type-switcher-area {
  height: 100rpx;               /* 固定占位高度 */
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 0rpx;           /* 用内边距控制垂直位置，替代translateY */
  position: relative;          /* 仅视觉上位移，不影响文档流与周围元素 */
  /* 已合并到 switcherTransform 控制垂直位移，移除 top 偏移 */
}

/* 转盘切换按钮组：3D凸起凹陷效果 */
.wheel-type-switcher {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  padding: 8rpx;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10rpx);
  z-index: 10; /* 保持适中层级 */
  pointer-events: auto; /* 确保可以接收点击事件 */
  transform: scale(0.7); /* 移除translateY，改由容器占位控制垂直位置，彻底固定 */
}

/* 切换动画效果 */
.wheel-type-switcher.switching {
  /* 移除动画效果，保持固定尺寸 */
}

/* 按钮基础样式 */
.wheel-type-switcher .switcher-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  border-radius: 42rpx;
  min-width: 120rpx;
  transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
  cursor: pointer;
  pointer-events: auto; /* 确保按钮可以接收点击事件 */
  
  /* 未选中状态：暗色+凹陷3D效果 */
  background: linear-gradient(145deg, #e6e6e6, #ffffff);
  box-shadow: 
    inset 4rpx 4rpx 8rpx rgba(0, 0, 0, 0.1),
    inset -4rpx -4rpx 8rpx rgba(255, 255, 255, 0.8);
  color: #666;
}

/* 选中状态：亮色+凸起3D效果 - 移除位移保持位置固定 */
.wheel-type-switcher .switcher-item.active {
  background: linear-gradient(145deg, #667eea, #764ba2);
  box-shadow: 
    4rpx 4rpx 12rpx rgba(102, 126, 234, 0.3),
    -4rpx -4rpx 12rpx rgba(118, 75, 162, 0.2),
    0 0 20rpx rgba(102, 126, 234, 0.4);
  transform: scale(1.05); /* 移除translateY保持位置固定 */
  color: #fff;
  animation: activeGlow 2s ease-in-out infinite alternate;
}

@keyframes activeGlow {
  0% { 
    box-shadow: 
      4rpx 4rpx 12rpx rgba(102, 126, 234, 0.3),
      -4rpx -4rpx 12rpx rgba(118, 75, 162, 0.2),
      0 0 20rpx rgba(102, 126, 234, 0.4);
  }
  100% { 
    box-shadow: 
      4rpx 4rpx 12rpx rgba(102, 126, 234, 0.4),
      -4rpx -4rpx 12rpx rgba(118, 75, 162, 0.3),
      0 0 25rpx rgba(102, 126, 234, 0.6);
  }
}

/* 图标样式 */
.switcher-item .icon {
  width: 48rpx;
  height: 48rpx;
  position: relative;
  margin-bottom: 10rpx;
  transition: all 0.4s ease;
}

/* 文案样式 */
.switcher-text {
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.4s ease;
  text-align: center;
}

/* 餐盘图标：圆盘+刀叉 */
.icon-plate::before { 
  content:""; 
  position:absolute; 
  left:50%; 
  top:50%; 
  width:28rpx; 
  height:28rpx; 
  border-radius:50%; 
  background: currentColor;
  opacity: 0.9;
  transform: translate(-50%, -50%); 
  transition: all 0.3s ease;
}
.icon-plate::after { 
  content:""; 
  position:absolute; 
  left:50%; 
  top:50%; 
  width:18rpx; 
  height:8rpx; 
  background: linear-gradient(90deg, transparent 0 15%, currentColor 15% 35%, transparent 35% 65%, currentColor 65% 85%, transparent 85%); 
  transform: translate(-50%, -50%); 
  border-radius:4rpx; 
  transition: all 0.3s ease;
}

/* 外卖袋图标：袋身+提手 */
.icon-bag::before { 
  content:""; 
  position:absolute; 
  left:50%; 
  top:50%; 
  width:22rpx; 
  height:24rpx; 
  background: currentColor;
  opacity: 0.9;
  border-radius:4rpx; 
  transform: translate(-50%, -40%); 
  transition: all 0.3s ease;
}
.icon-bag::after { 
  content:""; 
  position:absolute; 
  left:50%; 
  top:50%; 
  width:14rpx; 
  height:8rpx; 
  border:3rpx solid currentColor; 
  border-bottom:none; 
  border-radius:12rpx 12rpx 0 0; 
  transform: translate(-50%, -75%); 
  transition: all 0.3s ease;
}

/* 饮料杯图标：杯身+吸管 */
.icon-cup::before { 
  content:""; 
  position:absolute; 
  left:50%; 
  top:50%; 
  width:22rpx; 
  height:26rpx; 
  background: currentColor;
  opacity: 0.9;
  border-radius:3rpx; 
  transform: translate(-50%, -40%); 
  transition: all 0.3s ease;
}
.icon-cup::after { 
  content:""; 
  position:absolute; 
  left:50%; 
  top:50%; 
  width:3rpx; 
  height:16rpx; 
  background: currentColor;
  transform: translate(-8rpx, -75%); 
  border-radius:2rpx; 
  transition: all 0.3s ease;
}

/* 用图片替换切换按钮图标，移除伪元素 */
.icon-plate::before, .icon-plate::after,
.icon-bag::before, .icon-bag::after,
.icon-cup::before, .icon-cup::after { content: none; }

/* 统一图片图标显示方式 */
.icon-plate, .icon-bag, .icon-cup {
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
}

