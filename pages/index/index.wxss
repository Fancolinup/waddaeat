}

/* 餐盘图标：圆盘+刀叉 */
.icon-plate::before { 
  content:""; 
  position:absolute; 
  left:50%; 
  top:50%; 
  width:28rpx; 
  height:28rpx; 
  border-radius:50%; 
  background: currentColor;
  opacity: 0.9;
  transform: translate(-50%, -50%); 
  transition: all 0.3s ease;
}
.icon-plate::after { 
  content:""; 
  position:absolute; 
  left:50%; 
  top:50%; 
  width:18rpx; 
  height:8rpx; 
  background: linear-gradient(90deg, transparent 0 15%, currentColor 15% 35%, transparent 35% 65%, currentColor 65% 85%, transparent 85%); 
  transform: translate(-50%, -50%); 
  border-radius:4rpx; 
  transition: all 0.3s ease;
}

/* 外卖袋图标：袋身+提手 */
.icon-bag::before { 
  content:""; 
  position:absolute; 
  left:50%; 
  top:50%; 
  width:22rpx; 
  height:24rpx; 
  background: currentColor;
  opacity: 0.9;
  border-radius:4rpx; 
  transform: translate(-50%, -40%); 
  transition: all 0.3s ease;
}
.icon-bag::after { 
  content:""; 
  position:absolute; 
  left:50%; 
  top:50%; 
  width:14rpx; 
  height:8rpx; 
  border:3rpx solid currentColor; 
  border-bottom:none; 
  border-radius:12rpx 12rpx 0 0; 
  transform: translate(-50%, -75%); 
  transition: all 0.3s ease;
}

/* 饮料杯图标：杯身+吸管 */
.icon-cup::before { 
  content:""; 
  position:absolute; 
  left:50%; 
  top:50%; 
  width:22rpx; 
  height:26rpx; 
  background: currentColor;
  opacity: 0.9;
  border-radius:3rpx; 
  transform: translate(-50%, -40%); 
  transition: all 0.3s ease;
}
.icon-cup::after { 
  content:""; 
  position:absolute; 
  left:50%; 
  top:50%; 
  width:3rpx; 
  height:16rpx; 
  background: currentColor;
  transform: translate(-8rpx, -75%); 
  border-radius:2rpx; 
  transition: all 0.3s ease;
}

/* 用图片替换切换按钮图标，移除伪元素 */
.icon-plate::before, .icon-plate::after,
.icon-bag::before, .icon-bag::after,
.icon-cup::before, .icon-cup::after { content: none; }

