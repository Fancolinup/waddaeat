/* 点击效果 - 移除位移保持位置固定 */
.switcher-item:active {
  transform: scale(0.98); /* 移除translateY保持位置固定 */
  transition: all 0.1s ease;
}

.switcher-item.active:active {
  transform: scale(1.02); /* 移除translateY保持位置固定 */
  transition: all 0.1s ease;
}

