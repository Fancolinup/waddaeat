/* pages/index/index.wxss */

/* 搜索栏样式 */
.search-bar {
  padding: 20rpx;
  background-color: white;
  margin-bottom: 20rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  height: 70rpx;
  box-sizing: border-box;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 轮播图样式 */
.banner-swiper {
  height: 300rpx;
  margin-bottom: 30rpx;
}

.banner-item {
  position: relative;
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.banner-title {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

/* 分类导航样式 */
.category-section {
  background-color: white;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.category-item:active {
  background-color: #f0f0f0;
  transform: scale(0.95);
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}

.category-name {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

/* 餐厅列表样式 */
.restaurant-section {
  background-color: white;
  padding: 30rpx 20rpx;
  border-radius: 16rpx;
}

.restaurant-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.restaurant-card {
  display: flex;
  background-color: #fafafa;
  border-radius: 16rpx;
  padding: 20rpx;
  transition: all 0.3s;
  position: relative;
}

.restaurant-card:active {
  background-color: #f0f0f0;
  transform: scale(0.98);
}

.restaurant-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.restaurant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.restaurant-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.restaurant-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.rating {
  display: flex;
  align-items: center;
}

.star-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #ff6b35;
  font-weight: bold;
}

.category,
.distance {
  font-size: 24rpx;
  color: #666;
}

.discount-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: #ff6b35;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 用户信息区域样式 */
.user-section {
  margin-top: 30rpx;
}

.user-info-card {
  background-color: white;
  padding: 40rpx;
  border-radius: 16rpx;
  text-align: center;
}

.welcome-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.user-welcome {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-top: 30rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .category-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .restaurant-image {
    width: 120rpx;
    height: 90rpx;
  }
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  font-size: 28rpx;
  color: #999;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}