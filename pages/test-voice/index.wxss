/* 测试语录显示页面样式 */
.test-container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
}

.test-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.test-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: white;
  font-size: 32rpx;
}

.stats {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
}

.stats text {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
}

.quote-test, .topic-test {
  margin-bottom: 40rpx;
}

.quote-card-test {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.quote-zh-test {
  display: block;
  font-size: 42rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.8;
  text-align: center;
}

.separator-test {
  height: 30rpx;
  width: 100%;
}

.quote-en-test {
  display: block;
  font-size: 32rpx;
  font-weight: 400;
  font-style: italic;
  color: #666;
  line-height: 1.6;
  text-align: center;
  opacity: 0.88;
}

.topic-card-test {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.topic-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.option-a, .option-b {
  display: block;
  font-size: 28rpx;
  color: #555;
  margin: 15rpx 0;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}

.next-btn {
  width: 100%;
  background: rgba(255, 255, 255, 0.3);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
}