/* packageA/pages/voice/index.wxss */
/* 职场嘴替页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.voice-content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.dialogue-section {
  margin-top: 40rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.dialogue-list {
  background-color: #f9f9f9;
  border-radius: 15rpx;
  padding: 20rpx;
}

.dialogue-item {
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.dialogue-item:last-child {
  border-bottom: none;
}

.dialogue-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}